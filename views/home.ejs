<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
        body {
            background: linear-gradient(to right, #536475, #206bbb);
        }

        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: linear-gradient(145deg, #e6e6e6, #f9f9f9);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        }

        .card-img-top {
            object-fit: cover;
            height: 200px;
        }

        .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 1rem;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
        }

        .card-buttons {
            margin-top: auto;
        }

        .btn-primary,
        .btn-secondary {
            transition: all 0.3s ease;
            border-radius: 8px;
            font-weight: 500;
        }

        .btn-primary:hover {
            background-color: #0b5ed7;
            box-shadow: 0 0 10px #0b5ed7;
        }

        .btn-secondary:hover {
            background-color: #5c636a;
            box-shadow: 0 0 10px #5c636a;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <div class="container mt-4">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
              <% blogs.forEach(blog => { %>
                <div class="col d-flex">
                  <div class="card flex-fill shadow-sm h-100">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover"
                      style="width: 100%; height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                      <h5 class="card-title text-primary fw-bold"><%= blog.title %></h5>
                      <p class="card-text text-dark flex-grow-1"><%= blog.body.substring(0, 150) %>...</p>
                      <div class="mt-auto d-flex justify-content-between">
                        <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-outline-primary">Read More</a>
                        <% if (locals.user && blog.createdBy._id.toString() === user._id.toString()) { %>
                          <a href="/blog/edit/<%= blog._id %>" class="btn btn-sm btn-warning">Edit</a>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
          
    

    <%- include('./partials/scripts') %>
</body>

</html>
